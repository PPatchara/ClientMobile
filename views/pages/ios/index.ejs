                        <%- include('./control_mode'); %>
                    </div>
<!--                         <p id="testtest"></p> -->
                    <%- include('./partials/tabbar'); %>
                </div>
                <!-- Saved page -->
                <div data-page="saved" class="page cached">
                    <div class="page-content" style="margin-top: 20px;">
                        <%- include('./saved'); %>
                    </div>
                </div>
                <!-- Help page -->
                <div data-page="help" class="page cached">
                    <div class="page-content">
                        <p>Under Instruction</p>
                    </div>
                </div>
                <!-- Detail page -->
                <div data-page="details" class="page cached">
                    <div id="switchMode" class="page-content"></div>
                    <%- include('./detailsTemplate'); %>
                    <%- include('./partials/tabbar'); %>
                </div>
                
            </div>
        </div>
    </div>
    <!-- Popover (Saved page) -->
    <%- include('./partials/popover'); %>
