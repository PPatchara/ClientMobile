    <div class="views">
        <div class="view view-main">
            <!-- Navbar -->
            <div class="navbar">
                <!-- Control mode navbar -->
                <div data-page="index" class="navbar-inner">
                    <%- include('./partials/nav_control'); %>
                </div>
                <!-- Saved navbar-->
                <div data-page="saved" class="navbar-inner cached">
                    <%- include('./partials/nav_saved'); %>
                </div>
                <!-- Help navbar -->
                <div data-page="help" class="navbar-inner cached">
