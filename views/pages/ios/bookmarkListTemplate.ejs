<script type="text/template7" id="bookmarkListTemplate">
    <div class="content-block" style="padding: 0 5px;">
        <div class="list-block cards-list">
            <ul> 
                {{#each event_list}}
                  <li class="card" data-id="{{this.id}}"> 
                  <a href="#" style="color: #000000">
                    <div class="card-content">
                      <div class="list-block media-list">
                          <div class="item-content">
                            <div class="item-media">
                              {{#if this.image}}
                                <img src="/app/img/{{this.image}}" width="100" height="120">
                              {{else}}
                                <img src="" width="100" height="120">
                              {{/if}}
                            </div>
                            <div class="item-inner">
                              <div class="item-title-row">
                                <div class="item-title">{{this.title}}</div>
                              </div>
                              <div class="item-subtitle" style="margin-bottom: 0px;">
                                <p><i class="material-icons size-15 color-blue">schedule</i>
                                  {{#this.schedule}}
                                    {{#if this.topic}}
                                      <span>{{this.topic}}: {{this.date}}</span>
                                    {{else}}
                                      <span>{{this.date}}</span>
                                    {{/if}}
                                  {{/this.schedule}}
                                </p>
                              </div>
                              <div class="item-subtitle" style="margin-bottom: 5px;"><i class="material-icons size-15 color-blue">place</i> {{this.location}}</div>
                            </div>
                          </div>
                      </div>
                    </div>
                  </a>
                    <div class="card-footer">
                      {{#this.category}}
                        <div class="chip chip chip-label" style="margin-bottom: 10px; background-color: {{this.color}}; font-weight: 500;">{{this.type}}</div>
                      {{/this.category}}
                      <a href="#" class="link delete-card"  data-id="{{this.id}}">
                        <i class="f7-icons icon">trash</i>
                        <span>Unbookmark</span>
                      </a>
                    </div>
                  </li>  
                {{/each}}
            </ul>
        </div>
    </div>
</script>
